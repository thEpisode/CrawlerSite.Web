@{
    ViewBag.Title = "Sites";
}

@section Scripts{
    <script src="@Url.Content("~/Angular/Site/Service.js")"></script>
    <script src="@Url.Content("~/Angular/Site/Controller.js")"></script>
}

<section ng-controller="SiteController" ng-init="InitializeEditView()">
    <h2>Edit Site</h2>

    <div class="col-lg-12">
		<form  class="form-horizontal" ng-submit="EditSite()">
            <input type="hidden" id="_id" name="_id" ng-model="Site._id"/>
			<div class="form-group">
				<label class="col-sm-2 control-label">Name</label>
				<div class="col-sm-10">
					<input class="form-control" id="Name" name="Name" type="text" placeholder="Dremind" ng-model="Site.Name"/>
				</div>
			</div>

            <div class="form-group">
				<label class="col-sm-2 control-label">Url</label>
				<div class="col-sm-10">
					<input class="form-control" id="Url" name="Url" type="text" placeholder="http://www.dremind.com" ng-model="Site.Url"/>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Tags</label>
				<div class="col-sm-10">
					<input class="form-control" id="Tags" name="Tags" type="text" placeholder="Software, Development, Engineers" ng-model="Site.Tags" />
				</div>
			</div>

			<input type="submit" value="Save" class="btn btn-success" />
		</form>
	</div>
</section>