    <script src="@Url.Content("~/Angular/Site/Service.js")"></script>
    <script src="@Url.Content("~/Angular/Site/Controller.js")"></script>
	<script>
		
	</script>
}

<section ng-controller="SiteController" ng-init="InitializeIndexView()" class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
    <div class="row">
		<h2 class="text-center">Choose site you want to use</h2>
	</div>
	
	<div class="row">
		<div class="col-lg-3 col-sm-6" ng-repeat="site in Sites">
			<a href="@Url.Action("Index", "Insights")?Id={{ site._id }}" class="card-container">
				<div class="card site-card" style="background-image: url({{ setIcon(site.Url) }}), url('/dashboard-assets/img/icon-fail.png')">
					<div class="content">
						<span>{{ site.Name }}</span>
					</div>
				</div>
				
			</a>
			<div class="card-options">
					<a href="@Url.Action("Edit")?Id={{ site._id }}" title="Edit"><i class="ti-pencil"></i></a>
					<a href="@Url.Action("Delete")?Id={{ site._id }}" title="Delete"><i class="ti-trash"></i></a>
				</div>
		</div>

		<div class="col-lg-3 col-sm-6">
			<a href="@Url.Action("Add")">
				<div class="card add-site-card">
					<div class="content">
						<span>+</span> <br> Add site
					</div>
				</div>
			</a>
		</div>
	</div>

