@{
    ViewBag.Title = "Generate new Early Bird Access";
}

@section Scripts{
    <script src="@Url.Content("~/Angular/AdminVoucher/Service.js")"></script>
    <script src="@Url.Content("~/Angular/AdminVoucher/Controller.js")"></script>
}

<section ng-controller="IpController" ng-init="InitializeEarlyBirdView()">
	<div class="card col-sm-6 col-sm-offset-3">
		<h2 class="text-center">Generate new Early Bird Access</h2>

		<div class="col-lg-12">
			<form  class="form-horizontal" ng-submit="GenerateEarlyBird()">
				<div class="form-group">
					<label class="col-sm-2 control-label">Email:</label>
					<div class="col-sm-10">
						<input class="form-control" id="Name" name="Name" type="text" placeholder="jhon.doe@crawlersite.com" ng-model="AdminVoucher.Email" />
					</div>
				</div>

				<div class="text-center pull-right">
					<input type="submit" value="Generate" class="btn btn-danger btn-wd btn-fill" enabled/>
				
					<a class="btn btn-danger btn-wd"  href="@Url.Action("Index")" >Cancel</a>
				</div>
			</form>
		</div>
	</div>
</section>