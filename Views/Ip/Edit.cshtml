@{
    ViewBag.Title = "Edit IP";
}

@section Scripts{
    <script src="@Url.Content("~/Angular/Ip/Service.js")"></script>
    <script src="@Url.Content("~/Angular/Site/Service.js")"></script>
    <script src="@Url.Content("~/Angular/Ip/Controller.js")"></script>
}

<section ng-controller="IpController" ng-init="InitializeEditView()">
	<div class="card col-lg-6 col-md-6 col-sm-12 col-xs-12 col-lg-offset-3">
		<div class="header">
			<h4 class="title text-center">{{Ip.IP}}</h4>
			<p class="category">Edit your IP from {{Site.Name}}</p>
		</div>
		
		<div class="content">
			<div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
				<form  class="form-horizontal" ng-submit="EditIp()">
					<div class="form-group">
						<label class="col-sm-2 control-label">Friendly name:</label>
						<div class="col-sm-10">
							<input class="form-control" id="Name" name="Name" type="text" placeholder="Developer" ng-model="Ip.Name"/>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label">IP:</label>
						<div class="col-sm-10">
							<input class="form-control" id="IP" name="IP" type="text" placeholder="192.168.0.xxx" ng-model="Ip.IP" />
						</div>
					</div>
					<div class="form-group">
						<div class="text-center">
							<input type="submit" id="Createbtn"  value="Save" class="btn btn-danger btn-wd btn-fill" enabled/>
						
							<a class="btn btn-danger btn-wd"  href="@Url.Action("Index")" >Cancel</a>
						</div>
					</div>
					
				</form>
			</div>
		</div>
		
	</div>
</section>