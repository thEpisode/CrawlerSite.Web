@{
    ViewBag.Title = "Connection Filtering";
}

@section Scripts{
    <script src="@Url.Content("~/Angular/Ip/Service.js")"></script>
    <script src="@Url.Content("~/Angular/Site/Service.js")"></script>
    <script src="@Url.Content("~/Angular/Ip/Controller.js")"></script>
}



<section ng-controller="IpController" ng-init="InitializeIndexView()">
    <div class="card col-sm-12 col-sm-offset-0">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <h2 class="text-center">Connection Filtering</h2>
                <div>
                    
                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                        <p>Block Connections from the following IP addresses</p>
                    </div>
                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                            <a href="@Url.Action("Add")" class="btn btn-danger"><i class="ti-plus"></i> New Ip</a>
                        </div>
                        <div class="col-lg-6 col-md-3 col-sm-6 col-xs-6 pull-right">
                            <div class="col-lg-6 col-sm-6 col-md-6 col-xs-6">
                                <select class="form-control sites-list" ng-options="site.Name for site in Sites track by site.ApiKey" ng-model="siteOption" ng-change="OnSiteSelected()">
                                </select>
                            </div>
                            <div class="col-lg-6 col-sm-6 col-md-6 col-xs-6">
                                <input type="text" class="form-control" placeholder="&#xF002; Search" style="font-family:Arial, FontAwesome" ng-model="searchIP" />
                            </div>
                        </div>
                    </div>
                    
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td class="text-center">
                                    <a href="#" ng-click="sortType = 'IP'; sortReverse = !sortReverse">
                                        IP
                                        <span ng-show="sortType == 'IP' && !sortReverse" class="fa fa-caret-down"></span>
                                        <span ng-show="sortType == 'IP' && sortReverse" class="fa fa-caret-up"></span>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="#" ng-click="sortType = 'Name'; sortReverse = !sortReverse">
                                        Name
                                        <span ng-show="sortType == 'Name' && !sortReverse" class="fa fa-caret-down"></span>
                                        <span ng-show="sortType == 'Name' && sortReverse" class="fa fa-caret-up"></span>
                                    </a>
                                </td>
                                <td>
                                </td>
                            </tr>
                        </thead>

                        <tbody>
                            <tr ng-repeat="ip in Ips  | orderBy:sortType:sortReverse | filter:searchIP">
                                <td class="text-center">{{ ip.IP }}</td>
                                <td class="text-center">{{ ip.Name }}</td>
                                <td width="7%" class="text-center">
                                    <a href="@Url.Action("Edit")?Id={{ ip._id }}" class=" list-actions ti-pencil"></a>
                                    <a href="@Url.Action("Delete")?Id={{ ip._id }}" class=" list-actions ti-trash"></a>
                                </td>


                                @*<td><a href="@Url.Action("Edit")?Id={{ ip._id }}" class=" list-actions glyphicon-pencil"></a>  <a href="@Url.Action("Delete")?Id={{ ip._id }}" class=" list-actions glyphicon-trash"></a></col>*@
                            </tr>
                        </tbody>
                    </table>
                </div>
        </div>
    </div>
</section>