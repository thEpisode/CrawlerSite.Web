@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section id="home" name="home"></section>
<div id="headerwrap">
	<div class="container">
		<div class="row centered">
			<div class="col-lg-12 animate-box" data-animate-effect="fadeIn">
				<h1>Welcome To <b class="app-name">Crawler Site</b></h1> 
				<h3>Understanding your users has never been so easy</h3>
				<br>
			</div>
			
			<div class="col-lg-2 animate-box" data-animate-effect="fadeInRight" data-animate-time="500">
				<h5>Easy to understand</h5>
				<p>We make everything for you, only select your site and enjoy.</p>
				<img class="hidden-xs hidden-sm hidden-md" src="~/home-assets/img/arrow1.png">
			</div>
			<div class="col-lg-8 animate-box" data-animate-effect="fadeIn">
				<img class="img-responsive" src="~/home-assets/img/app-bg.jpg" alt="">
			</div>
			<div class="col-lg-2 animate-box" data-animate-effect="fadeInLeft" data-animate-time="200">
				<br>
				<img class="hidden-xs hidden-sm hidden-md" src="~/home-assets/img/arrow2.png">
				<h5>Easy to use</h5>
				<p>With only 3 steps you can setting up your Web App.</p>
			</div>
		</div>
	</div> <!--/ .container -->
</div><!--/ #headerwrap -->


<section id="desc" name="desc"></section>
<!-- INTRO WRAP -->
<div id="intro">
	<div class="container">
		<div class="row">
			<h2 class="intro-header animate-box">Stop Improvising.</h2>
			<h2 class="intro-header animate-box">Start analyzing.</h2>
		</div>
		<br>
	</div> <!--/ .container -->
	<div class="overlay"></div>
</div><!--/ #introwrap -->

<section class="what-is">
	<div class="container">
		<div  class="row">	
			<div class="hidden-xs">
				<img class="principal-features-laptop" src="~/home-assets/img/laptop.png" alt="">
			</div>	
			<div class="col-lg-7 col-md-6 col-sm-12 col-xs-12 col-lg-offset-5">
				<h2>Features</h2>
				<ul class="principal-features">
					<li class="animate-box" data-animate-effect="fadeIn">
						<div><span class="ti-check"></span></div>
						<div>
							<h4>Behavioral heatmaps</h4>
							<p>Unparalleled accuracy. Genuine impact. Leverage high-fidelity, data-rich desktop and mobile heatmaps to gain true insight into user intent.</p>
						</div>
					</li>
					<li class="animate-box" data-animate-effect="fadeIn">
						<div><span class="ti-check"></span></div>
						<div>
							<h4>Remote assistance and chat</h4>
							<p>Provides a clean, easy-to-use interface to empower your website with state-of-the-art remote access technology.</p>
						</div>
					</li class="animate-box" data-animate-effect="fadeIn">
					<li class="animate-box" data-animate-effect="fadeIn">
						<div><span class="ti-check"></span></div>
						<div>
							<h4>Session replay</h4>
							<p>View visitor playbacks of mobile or desktop sessions to understand how users interact with your content.</p>
						</div>
					</li>
					<li class="animate-box" data-animate-effect="fadeIn">
						<div><span class="ti-check"></span></div>
						<div>
							<h4>Conversion funnel</h4>
							<p>Visualize and map where users are dropping off in your funnel, what they’re doing after they leave, and how best to get them back on the optimal path to increase conversion rates.</p>
						</div>
					</li>
					<li class="animate-box" data-animate-effect="fadeIn">
						<div><span class="ti-check"></span></div>
						<div>
							<h4>A/B testing</h4>
							<p>Keep pace with your customers' constantly changing behaviors. Experiment in real time.</p>
						</div>
					</li>
					<li class="animate-box" data-animate-effect="fadeIn">
						<div><span class="ti-check"></span></div>
						<div>
							<h4>SEO tools</h4>
							<p>Automatically keep track of weekly changes in more than 30 SEO variables.</p>
						</div>
					</li>
				</ul>
			</div>
		</div>
	</div>
</section>

<section class="integrations">
	<div class="container">
		<div  class="row">	
				
			<div class="col-lg-7 col-md-6 col-sm-12 col-xs-12">
				<h2>Integrations</h2>
				<ul class="integration-features">
					<li class="animate-box" data-animate-effect="fadeIn">
						<div class="right-position">
							<h4>Slack integration</h4>
							<p>Unparalleled accuracy. Genuine impact. Leverage high-fidelity, data-rich desktop and mobile heatmaps to gain true insight into user intent.</p>
						</div>
						<div><span class="ti-check"></span></div>
					</li>
					<li class="animate-box" data-animate-effect="fadeIn">
						<div class="right-position">
							<h4>Email notifications</h4>
							<p>Provides a clean, easy-to-use interface to empower your website with state-of-the-art remote access technology.</p>
						</div>
						<div><span class="ti-check"></span></div>
					</li>
					<li class="animate-box" data-animate-effect="fadeIn">
						<div class="right-position">
							<h4>PowerPoint, Excel & PowerBI reports</h4>
							<p>View visitor playbacks of mobile or desktop sessions to understand how users interact with your content.</p>
						</div>
						<div><span class="ti-check"></span></div>
					</li>
					
				</ul>
			</div>
			<div class="hidden-xs col-sm-6 col-md-12 col-lg-3">
				<img class="integration-features-mobile" src="~/home-assets/img/nexus.png" alt="">
			</div>
		</div>
	</div>
</section>

<!-- FEATURES WRAP -->
<div id="features">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2 text-center">
				<img class="img-responsive" src="~/home-assets/img/img_devices.png" alt="">
				<h2 class="animate-box" data-animate-effect="fadeIn">Work anytime, anywhere</h2>
				<p class="animate-box" data-animate-effect="fadeIn">Our platform every day improve user experience to run in every browser, feel free to use without limitations or enterprise restrictions. Develop lasting relationships with your most loyal customers by delivering relevant experiences at every interaction.</p>
			</div>
		</div>
	
	</div>
</div>

<div id="showcase">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-sm-12 col-xs-12 col-md-12">
				<aside class="stats col-lg-4 col-sm-3 col-md-3 col-sm-12">
					<h5>At a glance</h5>
					<h2>100+</h2>
					<h4>Sites crawled</h4>
					<ul>
						<li>10.000.000+ data for heatmaps</li>
						<li>20+ companies use</li>
						<li>40+ hours of remote assistance</li>
					</ul>
				</aside>
				<div class="join-us col-lg-7 col-sm-3 col-md-3 col-sm-12 col-lg-offset-1">
					<h3>Let’s get started. Where will you experiment next?</h3>
					<a href="/Home/Register" class="btn btn-default btn-default-border-white btn-lg" title="">LEARN MORE</a>
					<a href="/Home/Register" class="btn btn-danger btn-lg" title="">TRY IT FOR FREE</a>
				</div>
			</div>
		</div>	
	</div>
</div>	


<section id="contact" name="contact"></section>

@section Scripts{
	<script>
		$('.carousel').carousel({
			interval: 3500
		})

		$('.navbar-nav>li').click(function(){
			$('.navbar-nav>li').removeClass('active');
			$(this).addClass('active');
		})
	</script>
}