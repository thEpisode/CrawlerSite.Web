@{
    ViewBag.Title = "Add new user";
}

<section ng-controller="UserController" ng-init="InitializeAddView()" typeahead>
    
    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 col-sm-offset-2">
        <div class="card">
            <div class="content">
                <h2 class="text-center">Create New User</h2>
                <form name="NewUserInfo" input-validations ng-submit="AddUser()">
                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="createUserLabel">First Name</label>
                                <input type="text" name="Firstname" id="Firstname" class="form-control" placeholder="First Name"  ng-model="User.FirstName" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="createUserLabel">Last Name</label>
                                <input type="text" name="Lastname" id="Lastname" class="form-control" placeholder="Last Name" ng-model="User.LastName" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="createUserLabel">City</label>
                                <input type="text" name="City" id="City" class="form-control" placeholder="City" ng-model="User.City" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="createUserLabel">Country</label>
                                <input type="text" name="Country" id="Country"  type="text" class="form-control" placeholder="Country" ng-model="User.Country" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">

                        <div class="col-md-12">
                            <div class="form-group">
                               
                                <label class="createUserLabel" for="exampleInputEmail1">Email address</label>
                                <input type="email" name="email" id="email" class="form-control" placeholder="Email" ng-model="User.Email">
                                
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <label class="control-label createUserLabel"> Select User Roles </label>
                            <div class="col-sm-12 col-sm-offset-0">
                                <div class="col-sm-3">
                                    <div class="choice" data-toggle="wizard-checkbox">
                                        <input type="checkbox" name="jobb" value="Designer">
                                        <div class="card card-checkboxes card-hover-effect">
                                            <i class="ti-image"></i>
                                            <p>Designer</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="choice" data-toggle="wizard-checkbox">
                                        <input type="checkbox" name="jobb" value="Developer">
                                        <div class="card card-checkboxes card-hover-effect">
                                            <i class="ti-shift-right-alt"></i>
                                            <p>Developer</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="choice" data-toggle="wizard-checkbox">
                                        <input type="checkbox" name="jobsb" value="Administrative">
                                        <div class="card card-checkboxes card-hover-effect">
                                            <i class="ti-agenda"></i>
                                            <p>Administrative</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="choice" data-toggle="wizard-checkbox">
                                        <input type="checkbox" name="jobb" value="Administrative">
                                        <div class="card card-checkboxes card-hover-effect">
                                            <i class="ti-server"></i>
                                            <p>IT Pro</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                        <div class="Inlinebtn col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <label class="control-label createUserLabel">Change Password At Logon</label>
                            <div class="onoffswitch">
                                <input type="checkbox" name="ChangeOnSign" class="onoffswitch-checkbox" id="ChangeOnSign" ng-model="User.ResetPassword">
                                <label class="onoffswitch-label" for="ChangeOnSign"></label>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                        <div class="Inlinebtn col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <label class="control-label createUserLabel">Create a Random Password</label>
                            <div class="onoffswitch">
                                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch" checked ng-model="User.RandomPassword">
                                <label class="onoffswitch-label" for="myonoffswitch"></label>
                            </div>
                        </div>
                    </div>
           
                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                            <div class="hiddenpass " id="mypassword">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="createUserLabel">Type Password</label>
                                        <input id="NewPassword" type="password" class="form-control" placeholder="Type Password" autocomplete="off">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="createUserLabel">Retype Password</label>
                                        <input id="ConfirmPassword" type="password" class="form-control" placeholder="Retype Password" autocomplete="off">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center pull-right">
                        <input type="submit" id="Createbtn"  value="Create" class="btn btn-danger btn-wd" enabled/>
                    
                        <a class="btn btn-danger btn-wd"  href="@Url.Action("Index", "User")" >Cancel</a>
                    </div>
                   
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <script src="~/lib/typeahead.js/dist/bloodhound.js"></script>
    <script src="~/lib/typeahead.js/dist/typeahead.jquery.js"></script>
    <script src="~/lib/typeahead.js/dist/typeahead.bundle.js"></script>
    <script src="~/js/countries.js"></script>
    <script src="@Url.Content("~/Angular/User/Service.js")"></script>
    <script src="@Url.Content("~/Angular/Site/Service.js")"></script>
    <script src="@Url.Content("~/Angular/User/Controller.js")"></script>

    <script src="~/dashboard-assets/js/jquery.bootstrap.wizard.js " type="text/javascript "></script>

    <!--  Plugin for the Wizard -->
    <script src="~/dashboard-assets/js/paper-bootstrap-wizard.js " type="text/javascript "></script>

    <!--  More information about jquery.validate here: http://jqueryvalidation.org/	 -->
    <script src="~/dashboard-assets/js/jquery.validate.min.js " type="text/javascript "></script>
}





