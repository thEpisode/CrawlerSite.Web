@{
    ViewBag.Title = "Users";
}

@section Scripts{
    <script src="~/js/countries.js"></script>
    <script src="@Url.Content("~/Angular/User/Service.js")"></script>
    <script src="@Url.Content("~/Angular/Site/Service.js")"></script>
    <script src="@Url.Content("~/Angular/User/Controller.js")"></script>
}
<section ng-controller="UserController" ng-init="InitializeIndexView()">
    <div class="card col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="header">
            <h4 class="title text-center">Manage Users</h4>
            <p class="category">All users listed above can manage your sites</p>

            <div class="col-lg-3 col-md-3 hidden-xs hidden-sm search-box">
                <input type="text" class="form-control" placeholder="&#xF002; Search" style="font-family:Arial, FontAwesome" ng-model="searchUser" />
            </div>
        </div>
        <div class="content">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div>
                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                            <a href="@Url.Action("Add")" class="btn btn-action"><i class="ti-plus"></i> New User</a>
                    </div>
                    
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <table class="table table-hover table-border-middle">
                            <thead>
                                <tr>
                                    <td>
                                        <a href="#" alt="Sort by name" class="sort-element" ng-click="sortType = 'FullName'; sortReverse = !sortReverse">
                                            Full Name
                                            <span ng-hide="sortType == 'FullName'" class="ti-exchange-vertical"></span>
                                            <span ng-show="sortType == 'FullName' && !sortReverse" class="ti-angle-down"></span>
                                            <span ng-show="sortType == 'FullName' &&  sortReverse" class="ti-angle-up"></span>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="#" alt="sort by email" class="sort-element" ng-click="sortType = 'Email'; sortReverse = !sortReverse">
                                            Email
                                            <span ng-hide="sortType == 'Email'" class="ti-exchange-vertical"></span>
                                            <span ng-show="sortType == 'Email' && !sortReverse" class="ti-angle-down"></span>
                                            <span ng-show="sortType == 'Email' && sortReverse" class="ti-angle-up"></span>
                                        </a>
                                    </td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="User in Users | orderBy:sortType:sortReverse | filter:searchUser">
                                    <td>{{ User.FirstName }} {{ User.LastName }}</td>
                                    <td>{{ User.Email }}</td>
                                    <td>
                                        <div class="text-center">
                                            <a href="@Url.Action("Edit")?Id={{ User._id }}" class="list-actions ti-pencil"></a>
                                            <a href="@Url.Action("Delete")?Id={{ User._id }}" class="list-actions ti-trash"></a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                </div>
            </div>
        </div>    
    </div>
</section>